<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="appli.ui.controller.LoginController"
            prefHeight="400.0" prefWidth="500.0"
            style="-fx-background-color: #f5f5f5;">

    <center>
        <VBox alignment="CENTER" spacing="20.0"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
              maxWidth="350" maxHeight="350">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>

            <Label text="HSP - Connexion" style="-fx-text-fill: #2196F3;">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>

            <Label text="Systeme de Gestion Hospitaliere" style="-fx-text-fill: #666666;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>

            <VBox spacing="5.0">
                <Label text="Email" style="-fx-text-fill: #333333;">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="Entrez votre email"
                           prefWidth="270" prefHeight="35"
                           onKeyPressed="#handleKeyPressed"
                           style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label text="Mot de passe" style="-fx-text-fill: #333333;">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe"
                               prefWidth="270" prefHeight="35"
                               onKeyPressed="#handleKeyPressed"
                               style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </VBox>

            <Label fx:id="errorLabel" text="" style="-fx-text-fill: #f44336;" visible="false">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>

            <Button text="Se connecter" onAction="#handleLogin"
                    prefWidth="270" prefHeight="40"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 5; -fx-cursor: hand;">
            </Button>

        </VBox>
    </center>

</BorderPane>
